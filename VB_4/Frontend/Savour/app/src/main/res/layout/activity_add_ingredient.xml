<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media" />

                <Button
                    android:id="@+id/button_add_ingredient_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:text="Photos" />

                <Button
                    android:id="@+id/button_add_ingredient_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:text="Camera" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/image_view_add_ingredient_media_preview"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/ic_placeholder" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredient Name" />

        <EditText
            android:id="@+id/edit_text_add_ingredient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredient Name"
            android:lines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredient Amount" />

        <EditText
            android:id="@+id/edit_text_add_ingredient_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredient Amount"
            android:inputType="numberDecimal"
            android:lines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredient Unit" />

        <EditText
            android:id="@+id/edit_text_add_ingredient_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredient Unit"
            android:lines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredient Category" />

        <EditText
            android:id="@+id/edit_text_add_ingredient_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredient Category"
            android:lines="1" />

        <Button
            android:id="@+id/button_add_ingredient_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>
