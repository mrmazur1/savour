<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.makeit.MakeItActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/make_it_recipe_media"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:scaleType="centerCrop"
            android:contentDescription="Recipe Image"/>
        <TextView
            android:id="@+id/make_it_recipe_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/make_it_recipe_media"
            android:gravity="center"
            android:background="@color/black"
            android:textStyle="bold"
            android:textSize="16pt"
            android:textColor="@color/white"
            android:text="Bacon"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/make_it_previous_step_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginHorizontal="10dp"
            android:text="Previous Step:"/>

        <TextView
            android:id="@+id/make_it_previous_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Cook"/>

    </LinearLayout>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="125dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/make_it_previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_back_36"/>
        <TextView
            android:id="@+id/make_it_current_step"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="25dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textAlignment="center"
            android:text="Cook"/>
        <ImageButton
            android:id="@+id/make_it_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_forward_36"/>

    </TableRow>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/cardview_light_background">

        <TextView
            android:id="@+id/make_it_next_step_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginHorizontal="10dp"
            android:text="Next Step:"/>

        <TextView
            android:id="@+id/make_it_next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Cook"/>

    </LinearLayout>




</LinearLayout>